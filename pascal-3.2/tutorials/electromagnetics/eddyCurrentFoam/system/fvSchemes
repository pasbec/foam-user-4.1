FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default                           none;
}

gradSchemes
{
    default                           none;

    grad(sigmaV)                      Gauss linear;

    grad(VRe)                         electricPotential;
    grad(VIm)                         electricPotential;

    curl(ARe)                         Gauss linear;
    curl(AIm)                         Gauss linear;

//     snGradCorr(sigmaV)                Gauss linear;
//
//     snGradCorr(ARe)                   Gauss linear;
//     snGradCorr(AIm)                   Gauss linear;
//
//     snGradCorr(VRe)                   Gauss linear;
//     snGradCorr(VIm)                   Gauss linear;
}

divSchemes
{
    default                           none;

    div(ARe)                          Gauss linear;
    div(AIm)                          Gauss linear;
}

laplacianSchemes
{
    default                           none;

    laplacian(sigmaV)                 Gauss linear uncorrected; // linear is not used here

    laplacian(sigmaV,VRe)             Gauss harmonic uncorrected; // harmonic is not used here
    laplacian(sigmaV,VIm)             Gauss harmonic uncorrected; // harmonic is not used here

    laplacian(AxRe)                   Gauss linear uncorrected; // linear is not used here
    laplacian(AxIm)                   Gauss linear uncorrected; // linear is not used here

    laplacian(AyRe)                   Gauss linear uncorrected; // linear is not used here
    laplacian(AyIm)                   Gauss linear uncorrected; // linear is not used here

    laplacian(AzRe)                   Gauss linear uncorrected; // linear is not used here
    laplacian(AzIm)                   Gauss linear uncorrected; // linear is not used here

    laplacian(ARe)                    Gauss linear uncorrected; // linear is not used here
    laplacian(AIm)                    Gauss linear uncorrected; // linear is not used here
}

interpolationSchemes
{
    default                           none;

    interpolate(sigmaV)               linear;
}

