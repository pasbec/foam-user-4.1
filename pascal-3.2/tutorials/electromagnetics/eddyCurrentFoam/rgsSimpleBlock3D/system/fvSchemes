FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default                           none;
}

gradSchemes
{
    default                           none;

    grad(sigma)                       Gauss linear;
    grad(sigmaV)                      Gauss linear;

    grad(VRe)                         Gauss linear;
    grad(VIm)                         Gauss linear;
//     grad(VRe)                         electricPotential Gauss linear;
//     grad(VIm)                         electricPotential Gauss linear;

    curl(ARe)                         Gauss linear;
    curl(AIm)                         Gauss linear;

//     snGradCorr(sigmaV)                Gauss linear;

    snGradCorr(ARe)                   Gauss linear;
    snGradCorr(AIm)                   Gauss linear;

//     snGradCorr(VRe)                   Gauss linear;
//     snGradCorr(VIm)                   Gauss linear;
}

divSchemes
{
    default                           none;

    div(ARe)                          Gauss linear;
    div(AIm)                          Gauss linear;
}

laplacianSchemes
{
    default                           none;

    laplacian(sigmaV)                 Gauss linear uncorrected; // linear is not used here

    laplacian(sigma,VRe)              Gauss linear uncorrected; // linear is not used here
    laplacian(sigma,VIm)              Gauss linear uncorrected; // linear is not used here

    laplacian(sigmaV,VRe)             electricPotential Gauss linear uncorrected; // linear is not used here
    laplacian(sigmaV,VIm)             electricPotential Gauss linear uncorrected; // linear is not used here

    laplacian(ARe)                    Gauss linear corrected; // linear is not used here
    laplacian(AIm)                    Gauss linear corrected; // linear is not used here
}

interpolationSchemes
{
    default                           none;

    interpolate(sigma)                linear;
    interpolate(sigmaV)               linear;

    interpolate(ARe)                  linear;
    interpolate(AIm)                  linear;
}

// ************************************************************************* //
