FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default                           none;
}

gradSchemes
{
    default                           none;

    curl(ARe)                         Gauss linear;
    curl(AIm)                         Gauss linear;
    snGradCorr(ARe)                   Gauss linear;
    snGradCorr(AIm)                   Gauss linear;

    grad(GRe)                         Gauss linear;
    grad(GIm)                         Gauss linear;
    snGradCorr(GRe)                   Gauss linear;
    snGradCorr(GIm)                   Gauss linear;

    grad(VRe)                         Gauss linear;
    grad(VIm)                         Gauss linear;
    snGradCorr(VRe)                   Gauss linear;
    snGradCorr(VIm)                   Gauss linear;

    grad(sigma)                       Gauss linear;
}

divSchemes
{
    default                           none;

    div(ARe)                          Gauss linear;
    div(AIm)                          Gauss linear;
}

laplacianSchemes
{
    default                           none;

    laplacian(ARe)                    Gauss linear corrected; // linear is not used here
    laplacian(AIm)                    Gauss linear corrected; // linear is not used here

    laplacian(GRe)                    Gauss linear corrected; // linear is not used here
    laplacian(GIm)                    Gauss linear corrected; // linear is not used here

    laplacian(VRe)                    Gauss linear corrected; // linear is not used here
    laplacian(VIm)                    Gauss linear corrected; // linear is not used here
}

interpolationSchemes
{
    default                           none;

    interpolate(sigma)                linear;

    interpolate(ARe)                  linear;
    interpolate(AIm)                  linear;

    interpolate(grad(GRe))            linear;
    interpolate(grad(GIm))            linear;
}

snGradSchemes
{
    default                           none;
}

