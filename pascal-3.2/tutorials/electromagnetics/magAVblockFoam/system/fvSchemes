FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default                           none;
}

gradSchemes
{
    default                           none;

    curl(ARe)                         Gauss linear;
    curl(AIm)                         Gauss linear;

    grad(AReDiv)                      Gauss linear;
    grad(AImDiv)                      Gauss linear;

    grad(sigmaV)                      Gauss linear;
    grad(VRe)                         Gauss linear;
    grad(VIm)                         Gauss linear;

    grad(GRe)                         Gauss linear;
    grad(GIm)                         Gauss linear;
}

divSchemes
{
    default                           none;

    div(ARe)                          Gauss linear;
    div(AIm)                          Gauss linear;
}

laplacianSchemes
{
    default                           none;

    laplacian(ARex)                   Gauss linear uncorrected; // linear is not used here
    laplacian(ARey)                   Gauss linear uncorrected; // linear is not used here
    laplacian(ARez)                   Gauss linear uncorrected; // linear is not used here
    laplacian(AImx)                   Gauss linear uncorrected; // linear is not used here
    laplacian(AImy)                   Gauss linear uncorrected; // linear is not used here
    laplacian(AImz)                   Gauss linear uncorrected; // linear is not used here

    laplacian(sigmaV)                 Gauss linear uncorrected; // linear is not used here
    laplacian(sigmaV,VRe)             Gauss linear uncorrected; // linear is not used here
    laplacian(sigmaV,VIm)             Gauss linear uncorrected; // linear is not used here

    laplacian(GRe)                    Gauss linear uncorrected; // linear is not used here
    laplacian(GIm)                    Gauss linear uncorrected; // linear is not used here
}

interpolationSchemes
{
    default                           none;

    interpolate(sigmaV)               linear;

    interpolate(ARe)                  linear;
    interpolate(AIm)                  linear;

    interpolate(VRe)                  linear;
    interpolate(VIm)                  linear;
}

// ************************************************************************* //
