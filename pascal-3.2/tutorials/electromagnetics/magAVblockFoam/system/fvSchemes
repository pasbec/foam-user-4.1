FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default                           none;
}

gradSchemes
{
    default                           none;

    curl(ARe)                         Gauss linear;
    curl(AIm)                         Gauss linear;

    grad(GRe)                         Gauss linear;
    grad(GIm)                         Gauss linear;

    grad(VRe)                         Gauss linear;
    grad(VIm)                         Gauss linear;
}

divSchemes
{
    default                           none;

    div(ARe)                          Gauss linear;
    div(AIm)                          Gauss linear;

    div(alphaf,ARe)                   Gauss linear;
    div(alphaf,AIm)                   Gauss linear;

    div(jRe)                          Gauss linear;
    div(jIm)                          Gauss linear;
}

laplacianSchemes
{
    default                           none;

    laplacian(ARe)                    Gauss linear uncorrected; // linear is not used here
    laplacian(AIm)                    Gauss linear uncorrected; // linear is not used here

    laplacian(GRe)                    Gauss linear uncorrected; // linear is not used here
    laplacian(GIm)                    Gauss linear uncorrected; // linear is not used here
    laplacian(alphaf,GRe)             Gauss linear uncorrected; // linear is not used here
    laplacian(alphaf,GIm)             Gauss linear uncorrected; // linear is not used here

    laplacian(sigma,VRe)              Gauss linear uncorrected;
    laplacian(sigma,VIm)              Gauss linear uncorrected;
    laplacian(sigmaf,VRe)             Gauss linear uncorrected; // linear is not used here
    laplacian(sigmaf,VIm)             Gauss linear uncorrected; // linear is not used here
}

interpolationSchemes
{
    default                           none;

    interpolate(sigma)                linear;
    interpolate(alpha)                linear;

    interpolate(ARe)                  linear; // debug
    interpolate(AIm)                  linear; // debug

    interpolate(jRe)                  linear; // debug
    interpolate(jIm)                  linear; // debug
}

snGradSchemes
{
    default                           none;
}

// ************************************************************************* //
