FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
solvers
{
    "(Ax|Ay|Az)"
    {
        solver                   BiCGStab;

        tolerance                1e-05;
        relTol                   0.5;

        minIter                  0;
        maxIter                  300;

        preconditioner           Cholesky;
    }

    Up
    {
        solver          BiCGStab;
        preconditioner  Cholesky;
        tolerance       1e-08;
        relTol          1e-02;

        minIter         0;
        maxIter         500;
    }

    p
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-08;
        relTol          1e-02;
    }

    pFinal
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-08;
        relTol          0;
    }

    U
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          1e-02;
    }
}

EDDYCURRENT
{
    interface          "oldInternalFaces";

    nCorrectors        5;

    residualControl
    {
        "(Ax|Ay|Az)"
        {
            tolerance  1e-05;
            relTol     0.1;
        }

        "(VRe|VIm)"
        {
            tolerance  1e-05;
            relTol     0.1;
        }
     }
}

OUTER
{
    nOuterCorrectors            10000;
    nCorrectors                 1;
    nNonOrthogonalCorrectors    5;
    pRefPoint (0.5 0.5 0);
    pRefValue 0;

    momentumPredictor no;

    residualControl
    {
        Up
        {
                tolerance  1e-05;
                relTol     1e-02;
        }

//         U
//         {
//                 tolerance  1e-08;
//                 relTol     1e-02;
//         }
        p
        {
                tolerance  1e-05;
                relTol     1e-02;
        }
     }
}

relaxationFactors
{
}

Magnetic
{
    update
    {
        active           on;
        outputCycle      2147483647;
        timeStepCycle    1;
        timeCycle        0.05;
    }
