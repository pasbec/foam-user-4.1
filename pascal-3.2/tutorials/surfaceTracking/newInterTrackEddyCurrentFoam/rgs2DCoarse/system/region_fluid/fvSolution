solvers
{
    Up
    {
        solver          BiCGStab;
        preconditioner  Cholesky;
        tolerance       1e-08;
        relTol          1e-02;

        minIter         0;
        maxIter         500;
    }

    pFinal
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-08;
        relTol          0;
    }

    p { $pFinal; relTol 1e-02; }

    U
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          1e-02;
    }

