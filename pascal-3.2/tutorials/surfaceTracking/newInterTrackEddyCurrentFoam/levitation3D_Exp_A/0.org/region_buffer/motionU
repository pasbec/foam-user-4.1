FoamFile
{
    version     2.0;
    format      ascii;
    class       tetPointVectorField;
    object      motionU;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [0 1 -1 0 0 0 0];

internalField       uniform (0 0 0);

boundaryField
{
    infinity
    {
        type            fixedValue;
        value           $internalField;
    }
    trackedSurface
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    "procBoundary.*"
    {
        type            processor;
        value           $internalField;
    }
    global
    {
        type            global;
    }
}

