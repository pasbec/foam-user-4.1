FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    AV
    {
        tolerance                1e-04;
        scale                    0.1;

//         minIter                  0;
        maxIter                  100;

        relax                    1.0;
    }

    A
    {
        solver                   BiCGStab;

        tolerance                1e-04;
        relTol                   0;

        minIter                  0;
        maxIter                  300;

        preconditioner           Cholesky;
    }
}

Magnetic
{
    update
    {
        active           on;
        outputCycle      2147483647;
        timeStepCycle    10;
        timeCycle        1e+100;
    }
}

