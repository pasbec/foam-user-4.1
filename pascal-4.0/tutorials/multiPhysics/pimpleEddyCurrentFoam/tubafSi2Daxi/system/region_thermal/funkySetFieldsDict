    rhoCp_siliconSolid
    {
        field         rhoCp;
        variables     $materialProperties;
        expression    "rhoCp_siliconSolid";
        condition     "set(cellSet_material_siliconSolid)";
        keepPatches   true;
    }

    temperature_gradient
    {
        field         T;
        expression    "50.0*(pos().z-0.022)";
        keepPatches   true;
    }
);

