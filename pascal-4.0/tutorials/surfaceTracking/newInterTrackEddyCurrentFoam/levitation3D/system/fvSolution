{
    interface          "trackedSurface";

    nCorrectors        5;

    residualControl
    {
        "(Ax|Ay|Az)"
        {
            tolerance  1e-05;
            relTol     0.1;
        }

        "(VRe|VIm)"
        {
            tolerance  1e-05;
            relTol     0.1;
        }
     }
}

