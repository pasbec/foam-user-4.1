FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|pFinal)"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-06;
        relTol          1e-03;
    }

    "(U|c)"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          1e-03;
    }
}

PIMPLE
{
    nOuterCorrectors            100;
    nCorrectors                 2;
    nNonOrthogonalCorrectors    0;
    pRefPoint (0 0.002 -1e-6);
    pRefValue 0;

    momentumPredictor yes;

    residualControl
    {
        U
        {
                tolerance  5e-04;
                relTol     1e-03;
        }
        p
        {
                tolerance  5e-04;
                relTol     1e-03;
        }
     }
}

relaxationFactors
{
    U        0.7;
    p        0.3;
    c        1.0;
}

