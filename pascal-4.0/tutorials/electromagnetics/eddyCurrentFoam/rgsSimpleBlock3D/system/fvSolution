    "(GRe|GIm)"
    {
        solver                   deflatedPCG;

        tolerance                1e-05;
        relTol                   0.1;

        minIter                  0;
        maxIter                  300;

        preconditioner           DIC; // AMG, Cholesky, DIC, DILU, FDIC,
                                      // GAMG, SymGaussSeidel, diagonal, none
    }

    "(ARe|AIm)"
    {
        solver                   PCG;

        tolerance                1e-05;
        relTol                   0;

        minIter                  0;
        maxIter                  300;

        preconditioner           DIC; // AMG, Cholesky, DIC, DILU, FDIC,
                                      // GAMG, SymGaussSeidel, diagonal, none
    }
}

EDDYCURRENT
{
    interface                   "conductorSurface";

    nCorrectors                 2;
    nSubCorrectors              100;

    residualControl
    {
        "(Ax|Ay|Az)"
        {
            tolerance           1e-05;
            relTol              1e-02;
        }

        "(VRe|VIm)"
        {
            tolerance           1e-05;
            relTol              1e-02;
        }
    }

    emUpdate
    {
        enabled                 yes;

        outputTimeIndexCycle    10;
        timeIndexCycle          2147483647;
        timeCycle               1e+300;

        relDeltaAmax            0.10;
    }
}

