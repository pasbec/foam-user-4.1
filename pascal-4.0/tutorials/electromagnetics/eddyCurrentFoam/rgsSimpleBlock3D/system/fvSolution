solvers
{
    "(Ax|Ay|Az)"
    {
        solver                   BiCGStab;

        tolerance                1e-05;
        relTol                   0.1;

        minIter                  0;
        maxIter                  300;

        preconditioner           Cholesky;
    }
//     {
