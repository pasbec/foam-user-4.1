FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      funkySetFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

materialProperties
(
    "sigma_high=1.2e+6;"
    "sigma_low=1e+5;"
//     "sigma_low=1.2e+6;"
    "mur_high=1;"
//     "mur_high=10;"
    "mur_low=1;"
);

expressions
(
    sigma_reset
    {
        field         sigma;
        variables     $materialProperties;
        expression    "0";
        keepPatches   true;
    }
    sigma_conductor_y_le_0
    {
        field         sigma;
        variables     $materialProperties;
        condition     "set(cellSet_material_conductor) && pos().y<=0";
        expression    "sigma_high";
        keepPatches   true;
    }
    sigma_conductor_y_gt_0
    {
        field         sigma;
        variables     $materialProperties;
        condition     "set(cellSet_material_conductor) && pos().y>0";
        expression    "sigma_low";
        keepPatches   true;
    }

    mur_reset
    {
        field         mur;
        variables     $materialProperties;
        expression    "1";
        keepPatches   true;
    }
    mur_conductor_y_le_0
    {
        field         mur;
        variables     $materialProperties;
        condition     "set(cellSet_material_conductor) && pos().y<=0";
        expression    "mur_high";
        keepPatches   true;
    }
    mur_conductor_y_gt_0
    {
        field         mur;
        variables     $materialProperties;
        condition     "set(cellSet_material_conductor) && pos().y>0";
        expression    "mur_low";
        keepPatches   true;
    }
);

